---
import type { Product } from "@/markket";

interface Props {
  product: Product;
}

const { product } = Astro.props;

const image = product?.SEO?.socialImage || product.Slides[0];
---

<a
  href={`/projects/${product.slug}`}
  class="block group transition-transform hover:-translate-y-1 hover:shadow-2xl"
>
  <div
    class="relative bg-white/70 backdrop-blur-md border border-gray-200 rounded-2xl overflow-hidden shadow-lg hover:bg-white/90 transition-colors"
  >
    {
      image?.url && (
        <img
          src={image.url}
          alt={image.alternativeText || product.Name}
          class="w-full h-[260px] object-cover group-hover:scale-105 transition-transform duration-300"
          width="400"
          height="270"
          loading="lazy"
        />
      )
    }
    <div class="p-6">
      <div class="flex items-center gap-2 mb-2">
        <span
          class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-gradient-to-r from-green-400 to-blue-500 text-white shadow"
        >
          {"Project"}
        </span>
        <!-- {product.featured && (
          <span class="ml-2 px-2 py-0.5 text-xs font-bold rounded bg-yellow-400 text-yellow-900">â˜… Featured</span>
        )} -->
      </div>
      <p
        class="text-xl font-bold mb-1 text-blue-400 group-hover:text-blue-600 dark:text-gray-900"
      >
        {product.Name}
      </p>
      <p class="text-gray-600 mb-3 line-clamp-3">
        {product.SEO?.metaDescription}
      </p>
    </div>
    <div
      class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity"
    >
      <svg
        class="w-6 h-6 text-blue-500"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17 8l4 4m0 0l-4 4m4-4H3"
        >
        </path>
      </svg>
    </div>
  </div>
</a>
