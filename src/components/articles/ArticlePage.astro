---
import type { ArticleEntry as Article } from "@/types/index.d";
import {
  IconCalendar,
  IconArrowLeft,
  IconShare,
  IconHeart,
  IconBookmark,
} from "@tabler/icons-react";
import Blocks from "@components/ui.content";

export interface Props {
  article: Article["data"];
}

const { article } = Astro.props;

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};

const getImageUrl = (cover: Article["data"]["cover"]) => {
  return cover?.url;
};

const imageUrl = getImageUrl(article.cover);
---

<article class="min-h-[60vh]">
  <div class="max-w-4xl mx-auto px-6 py-12">
    <!-- Back Button -->
    <div class="mb-8">
      <a
        href="/articles"
        class="inline-flex items-center text-purple-600 hover:text-purple-700 font-semibold transition-colors group"
      >
        <IconArrowLeft
          size={20}
          className="mr-2 group-hover:-translate-x-1 transition-transform duration-300"
        />
         Back to Articles
      </a>
    </div>

    <!-- Article Header -->
    <header class="mb-12">
      <div class="flex items-center justify-between mb-6 flex-wrap gap-4">
        <div class="flex items-center text-gray-600">
          <IconCalendar size={20} className="mr-2" />
          <time datetime={article.publishedAt} class="font-medium">
            {formatDate(article.publishedAt)}
          </time>
        </div>

        {
          article.Tags && article.Tags.length > 0 && (
            <div class="flex gap-2 flex-wrap">
              {article.Tags.map((tag) => (
                <span
                  key={tag.id}
                  class="px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white text-sm font-semibold rounded-full shadow-md"
                >
                  {tag.name}
                </span>
              ))}
            </div>
          )
        }
      </div>

      <h1
        class="text-4xl md:text-6xl font-black bg-gradient-to-r from-purple-600 via-pink-600 to-orange-500 bg-clip-text text-transparent mb-6 leading-tight"
      >
        {article.Title}
      </h1>

      {
        article.SEO?.metaDescription && (
          <p class="text-xl text-gray-700 leading-relaxed max-w-3xl">
            {article.SEO.metaDescription}
          </p>
        )
      }
    </header>

    <!-- Hero Image -->
    <div class="relative mb-12 rounded-3xl overflow-hidden shadow-2xl">
      <img
        src={imageUrl}
        alt={article.Title}
        class="w-full h-96 md:h-[500px] object-cover"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
      >
      </div>
    </div>

