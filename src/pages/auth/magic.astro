---
import { getCollection } from "astro:content";
import BaseLayout from "@components/base/BaseLayout.astro";
import Blocks from "@components/ui.content";
import { Image } from "astro:assets";
import type { Page } from "@/markket";

const pages = await getCollection("pages");

const magicPage = pages?.find(page => page?.data?.slug == 'auth.magic')?.data;

const store = (await getCollection("store"))?.[0]?.data;

---

<BaseLayout>
  <section class="about-page">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-6">
          {
            store?.Logo?.url && (
              <div class="blur-[0px]">
                <Image
                  class="mb-6 w-64"
                  src={store?.Logo?.url}
                  alt={store?.Logo?.alternativeText || store?.title}
                  width={180}
                  height={180}
                  loading="eager"
                />
              </div>
            )
          }
          <h1 class="mb-4">{store?.title}</h1>
          <div
            class="mb-8 mt-4 bg-white bg-opacity-90 rounded-sm text-left p-6"
          >
            <Blocks params={{ page: magicPage as Page }} />
          </div>
      </div>
    </div>
  </section>

</BaseLayout>
